    {
      "name": "1. Vue Consolidée",
      "item": [
        {
          "name": "GET Vue consolidée LYS",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.to.have.status(200));",
                  "",
                  "pm.test('Structure correcte', () => {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json).to.have.property('aeroportCodeIATA', 'LYS');",
                  "    pm.expect(json).to.have.property('timestamp');",
                  "    pm.expect(json).to.have.property('statistiques');",
                  "    pm.expect(json).to.have.property('volsDepart');",
                  "    pm.expect(json).to.have.property('volsArrivee');",
                  "    pm.expect(json).to.have.property('pistes');",
                  "});",
                  "",
                  "pm.test('Statistiques présentes', () => {",
                  "    const stats = pm.response.json().statistiques;",
                  "    pm.expect(stats).to.have.property('totalVolsDepart');",
                  "    pm.expect(stats).to.have.property('totalVolsArrivee');",
                  "    pm.expect(stats).to.have.property('volsEnCours');",
                  "    pm.expect(stats).to.have.property('pistesDisponibles');",
                  "});",
                  "",
                  "pm.test('Vols départ >= 2', () => {",
                  "    pm.expect(pm.response.json().volsDepart.length).to.be.at.least(2);",
                  "});",
                  "",
                  "pm.test('Vols arrivée >= 1', () => {",
                  "    pm.expect(pm.response.json().volsArrivee.length).to.be.at.least(1);",
                  "});",
                  "",
                  "pm.test('Pistes >= 2', () => {",
                  "    pm.expect(pm.response.json().pistes.length).to.be.at.least(2);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/aeroports/{{codeIATA}}/trafic"
          }
        },
        {
          "name": "GET Vue consolidée - Aéroport sans trafic",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200 avec listes vides', () => {",
                  "    pm.response.to.have.status(200);",
                  "    const json = pm.response.json();",
                  "    pm.expect(json.volsDepart).to.be.an('array');",
                  "    pm.expect(json.volsArrivee).to.be.an('array');",
                  "    pm.expect(json.statistiques.totalVolsDepart).to.equal(0);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/aeroports/FRA/trafic"
          }
        }
      ]
