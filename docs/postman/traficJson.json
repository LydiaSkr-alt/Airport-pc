                  "pm.test('Structure VolTraficResponse', () => {",
                  "    const vol = pm.response.json()[0];",
                  "    pm.expect(vol).to.have.property('numeroVol');",
                  "    pm.expect(vol).to.have.property('origine');",
                  "    pm.expect(vol).to.have.property('destination');",
                  "    pm.expect(vol).to.have.property('heureDepart');",
                  "    pm.expect(vol).to.have.property('heureArrivee');",
                  "    pm.expect(vol).to.have.property('statut');",
                  "});",
                  "",
                  "pm.test('Contient AF1234 avec piste', () => {",
                  "    const vols = pm.response.json();",
                  "    const af1234 = vols.find(v => v.numeroVol === 'AF1234');",
                  "    pm.expect(af1234).to.not.be.undefined;",
                  "    pm.expect(af1234.pisteAssignee).to.equal('09L');",
                  "    pm.expect(af1234.avionImmatriculation).to.equal('F-GKXA');",
                  "});"
